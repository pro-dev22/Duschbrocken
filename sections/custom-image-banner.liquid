
<style>
    .mobile-banner {
        display: none;
    }
    .desktop-banner img {
        width: 100%;
        display: flex;
    }
@media only screen and (max-width: 600px) {
    .mobile-banner {
    display: block;
    }
    .desktop-banner {
        display: none;
    }

    .mobile-banner img {
        display: flex;
        width: 100%;
    }
}
</style>

<div class="custom-banner-whole">
    <div class="full-width-banner">
        <div class="desktop-banner">
            {%- assign desk_img = section.settings.desk_img -%}
            {% if desk_img != blank %}
                <a href="{{ section.settings.desk_url }}"><img src="{{ desk_img | img_url: 'master' }}"></a>
            {% endif %}
        </div>
        <div class="mobile-banner">
            {%- assign mbil_img = section.settings.mbil_img -%}
            {% if mbil_img != blank %}
                <a href="{{ section.settings.mbil_url }}"><img src="{{ mbil_img | img_url: 'master' }}"></a>
            {% endif %}
        </div>
    </div>
</div>

{% schema %}
  {
  "name": "Custom Banner",
  "settings": [
    {
      "type": "image_picker",
      "label": "Desktop image",
      "id": "desk_img"
    },
    {
      "type": "url",
      "label": "Desktop image Url",
      "id": "desk_url"
    },
    {
      "type": "image_picker",
      "label": "Mobile Image",
      "id": "mbil_img"
    },
    {
      "type": "url",
      "label": "Mobile image Url",
      "id": "mbil_url"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}  
{% endschema %}
