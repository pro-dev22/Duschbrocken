{{ 'sleepy-beds.css' | asset_url | stylesheet_tag }}
<style>
    .bedstre-sided {
    display: flex;
    justify-content: space-between;
    margin: 0 10px;
    gap: 20px;
    margin-top: 50px;
}

.bedstr-bed img {
    max-width: 546px;
    display: flex;
    margin-bottom: 20px;
}

.bedstre-in {
    max-width: 1140px;
    margin: auto;
}

.bedstr-bed {
    display: flex;
    justify-content: center;
}


.bedstr-right {
    max-width: 546px;
}

.bedstre-left {
    max-width: 500px;
}
.bedstr-img-mobile {
    display: none;
}


@media only screen and (max-width: 900px) {
    .bedstre-sided {
    flex-direction: column;
    justify-content: center;
    margin-top: 20px;
}

.bedstre-left {
    margin: auto;
}

.bedstr-right {
    margin: auto;
    max-width: 100%;
}


.bedstr-bed img {
    width: 100%;
    max-width: 100%;
}
}
@media only screen and (max-width: 600px) {
    .bedstr-img-desk {
        display: none;
}
    .bedstr-bed img {
        margin: 0;
    }
.bedstr-img-mobile {
    display: block;
}
.bedstre-in h2 {
    max-width: 80%;
    margin: auto;
    margin-top: 20px;
}
.sleepy-revires-w-txt.revws-twt-mbil {
    flex-direction: row;
    margin: auto;
    align-items: center;
}

.revws-twt-mbil p {
    margin-top: 0;
}

}
</style>

<div class="bedstre"> 
    <div class="bedstre-in">
        <div class="sleepy-heading">
            <h2>{{ section.settings.text}}</h2>
        </div>
        <div class="bedstre-sided">
            <div class="bedstr-bed bedstr-img-mobile">
                {%- assign bed = section.settings.bed -%}
                {% if bed != blank %}
                    <img src="{{ bed | img_url : 'master' }}">
                 {% endif %}
            </div>
            <div class="bedstre-left sleepy-blocks">
                {%- for block in section.blocks -%}
                
                <div class="sleepy-block">
                    <div class="sleepy-img">
                        {%- assign icon_img = block.settings.icon -%}
                {% if icon_img != blank %}<img src="{{ icon_img | img_url : 'master' }}">{% endif %}
                        </div>
                    <div class="sleepy-text">
                        <h3>{{ block.settings.heading }}</h3> 
                        <h4>{{ block.settings.text }}</h4> 
                    </div>
                </div>
                {%- endfor -%}
            </div>
        <div class="bedstr-right">
            <div class="bedstr-bed bedstr-img-desk">
                {%- assign bed = section.settings.bed -%}
                {% if bed != blank %}
                    <img src="{{ bed | img_url : 'master' }}">
                 {% endif %}
            </div>
            <div class="position-div-last-elm">
            <div class="sleepy-reviews">
                <a href=""{{ section.settings.url }}>{{ section.settings.btn-txt }}</a>
                <div class="payments-all payments-mbil">
                    {%- assign paymetns = section.settings.payments -%}
                        {% if paymetns != blank %}
                            <img src="{{ paymetns | img_url : 'master' }}">
                         {% endif %}
                </div>
                <div class="sleepy-revires-w-txt revws-twt-mbil">
                    <div class="sleepy-rvws">
                        {%- assign reviews = section.settings.rv_img -%}
                        {% if reviews!= blank %}<img src="{{ reviews | img_url : 'master' }}">{% endif %}
                    </div>
                    <div class="sleepy-revws-nmbr">
                        <p>{{ section.settings.revws_nmbrs }}</p>
                    </div>
                </div>
            </div>
            <div class="payments-all payments-desktop">
                {%- assign paymetns = section.settings.payments -%}
                    {% if paymetns != blank %}
                        <img src="{{ paymetns | img_url : 'master' }}">
                     {% endif %}
            </div>
        </div>
        </div>
        </div>
    </div>
</div>

{% schema %}
  {
  "name": "Bedstr Mattress",
  "settings": [
    {
      "type": "text",
      "label": "Heading",
      "id": "text"
    },
    {
      "type": "image_picker",
      "label": "Main Image",
      "id": "bed"
    },
    {
      "type": "text",
      "label": "Button Text",
      "id": "btn-txt"
    },
    {
      "type": "url",
      "label": "Button Url",
      "id": "url"
    },
    {
      "type": "image_picker",
      "label": "Reviews Image",
      "id": "rv_img"
    },
    {
      "type": "text",
      "label": "Reviews text",
      "id": "revws_nmbrs"
    },
    {
      "type": "image_picker",
      "label": "Payments Image",
      "id": "payments"
    }
  ],
  "blocks": [
    {
      "name": "Block",
      "type": "block",
      "settings": [
        {
          "type": "image_picker",
          "label": "Icon",
          "id": "icon"
        },
        {
          "type": "text",
          "label": "Block Heading",
          "id": "heading"
        },
        {
          "type": "text",
          "label": "Block Text",
          "id": "text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Bedstr Mattress"
    }
  ]
}  
{% endschema %}

